<!-- views/dashboard.ejs -->
<html>
<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Welcome, <%= user.username %>!</h1>
        <h2>Moderation Logs</h2>
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Action</th>
                    <th>Reason</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% logs.forEach(log => { %>
                    <tr>
                        <td><%= log.userid %></td>
                        <td><%= log.action %></td>
                        <td><%= log.reason %></td>
                        <td><%= new Date(log.created).toLocaleString() %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
